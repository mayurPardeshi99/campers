<% layout('layout/boilerplate') -%>
<div class="row mt-3">
    <h1 class="text-center">New Campground</h1>
    <div class="col-md-6 offset-md-3">
        <form class="validated-form" action="/campgrounds/new" enctype="multipart/form-data" method="POST" novalidate>
            <div class="mb-3">
                <label for="title" class="form-label">Title</label>
                <input type="text" class="form-control" name="campground[title]" id="title" required>
                <div class="invalid-feedback">
                    Please provide a valid title.
                </div>
            </div>
            <div class="mb-3">
                <label for="location" class="form-label">Location</label>
                <input type="text" class="form-control" name="campground[location]" id="location" required>
                <div class="invalid-feedback">
                    Please provide a valid location.
                </div>
            </div>
            <div class="mb-3">
                <label for="formFileMultiple" class="form-label">Campground Images</label>
                <input class="form-control" name="image" type="file" id="formFileMultiple" multiple>
            </div>
            <div class="mb-3">
                <label for="price" class="form-label">Campground Price</label>
                <div class="input-group mb-3">
                    <span class="input-group-text" id="price">$</span>
                    <input type="text" class="form-control" placeholder="0.00" id="price" aria-label="price" 
                        name="campground[price]" aria-describedby="price" required>
                    <div class="invalid-feedback">
                        Please provide a valid price.
                    </div>
                </div>
            </div>
            <div class="mb-3">
                <label for="description" class="form-label">Description</label>
                <textarea type="text" class="form-control" name="campground[description]" id="description" required></textarea>
                <div class="invalid-feedback">
                    Please provide a valid description.
                </div>
            </div>
            <div class="mb-3">
                <button type="submit" class="btn btn-success">Add Campground</button>
            </div>
        </form>
    </div>
</div>
    
